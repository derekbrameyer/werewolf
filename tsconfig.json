{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "sourceMap": false,
    "baseUrl": "./src",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./.trash",
    "suppressImplicitAnyIndexErrors": true,
    "strict": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "noUnusedLocals": true
  },
  "exclude": ["node_modules"]
}
